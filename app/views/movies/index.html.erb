<p id="notice"><%= notice %></p>

<h1>Movies</h1>

<div class="row">
  <% @movies.each do |movie| %>
    <div class="col-md-4">
      <div class="card">
        <img class="card-img-top img-responsive" width="100%" src="<%= movie.image %>" alt="Card image cap">
        <div class="card-block">
          <h4 class="card-title"><%= movie.title %> <span>(<%= movie.imdb_rating %>)</span></h4>
          <p class="card-text"><%= movie.synopsis %></p>
          <%= link_to 'Show', movie, class: 'btn btn-success' %>
        </div>
      </div>
    </div>
  <% end %>
</div>

<br>

<%= link_to 'New Movie', new_movie_path, class: 'btn btn-success' %>
